<!DOCTYPE html>
<html>

<head>
    <title>{{ .Name }} - {{ .Title }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <style>
        /* Additional custom styles */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .container {
            max-width: 1000px;
            /* Increase the max-width as desired */
        }

        header {
            text-align: center;
            margin-bottom: 2rem;
        }

        h1 {
            font-size: 2.5rem;
            text-align: center;
        }

        h3 {
            margin-bottom: 1rem;
            text-align: center;
        }

        p {
            text-align: justify;
            max-width: 700px;
            margin: 0 auto;
            margin-bottom: 1rem;
        }

        .profile-img {
            display: block;
            margin: 0 auto;
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 50%;
        }

        .projects-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 1rem;
            /* Adjust the gap value as desired */
        }

        .project-card {
            flex-basis: calc(33.33% - 1rem);
            /* Adjust the flex-basis and gap values to accommodate three projects */
            margin-bottom: 1rem;
            text-align: center;
        }

        .project-card .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .project-card .btn {
            margin-top: auto;
        }

        .networks-list {
            list-style: none;
            padding: 0;
            text-align: center;
        }

        .networks-list li {
            display: inline-block;
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        footer {
            margin-top: 2rem;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>{{ .Name }}</h1>
            <h2>{{ .Title }}</h2>
            <br>
            <img src="data/profile.jpg" class="profile-img" alt="Profile Photo">
            <br>
            <ul class="networks-list">
                {{ range .Networks }}
                <li><a href="{{ .Link }}" target="_blank"> {{ .Name }} </a></li>
                {{ end }}
            </ul>
        </header>

        <section id="about">
            <h3>About Me</h3>
            <p>{{ .About }}</p>
        </section>

        <section id="projects">
            <h3>Projects</h3>
            <div class="projects-container">
                {{ range .Projects }}
                <div class="card project-card">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ .Title }}</h5>
                        <p class="card-text">{{ .Description }}</p>
                        <a href="{{ .Link }}" class="btn btn-primary mt-auto">View Project</a>
                    </div>
                </div>
                {{ end }}
            </div>
        </section>

        <footer>
            <p class="text-center">Â© {{ .Name }}. All rights reserved.</p>
        </footer>
    </div>
</body>